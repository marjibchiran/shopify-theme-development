<div class="customer-login-page">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
               <h2>Customer Login</h2>
               {% form 'customer_login' %}
                {% if form.errors %}
                    {{ form.errors }}
                {% endif %}

                <div class="login-form-input my-5">
                   <div class="form-group">
                    <input type="email" id="customerEmail" class="form-control my-3" name="customer[email]" placeholder="Email">
                    <input type="password" id="customerPassword" class="form-control" name="customer[password]" placeholder="Password">
                   </div> 
                </div>
                <div class="my-3">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
               {% endform %} 
            </div>
        </div>
    </div>
</div>