<div class="customer-login-page">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div id="customerLogin">
                    <div class="page-header my-5 text-center">
                        <h2>Customer Login</h2>
                    </div>
                    <div class="login-form-area">
                        {% form 'customer_login' %}
                        {% if form.errors %}
                            {{ form.errors }}
                        {% endif %}

                        <div class="login-form-input my-3">
                            <div class="form-group">
                                <input type="email" id="customerEmail" class="form-control my-2" name="customer[email]" placeholder="Email">
                                <input type="password" id="customerPassword" class="form-control" name="customer[password]" placeholder="Password">
                            </div> 
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-success">Login</button>
                            <a href="{{ routes.account_register_url }}">Create New Account</a>
                        </div>
                        {% endform %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
