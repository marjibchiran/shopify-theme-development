<div class="blog-template">
    <div class="container">
        <div class="blog-title">
            <h2>{{ blog.title }}</h2>
        </div>
        <div class="row">
            {% for article in blog.articles %}
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            {% if article.image != blank %}
                                {{ article.image |  image_url: width:350 |  image_tag  }}
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            <a href="{{ article.url }}">{{ article.title }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>