<div class="main-404-template">
    <div class="container">
        <div class="main-content text-center my-5">


        {% if section.settings.image != blank %}

            <div class="404-image">
                {{ section.settings.image | image_url: width: 800 |  image_tag }}
                <div class="page-action">
                    <a href="{{ section.settings.action_url |  default: '/collections/all' }}" class="btn btn-success my-2">{{ section.settings.action_label }}</a>
                </div>
            </div>
            {% else %}
            <h1 class="heading">Page Not Found</h1>
            <div class="action my-5">
                <a href="/collections/all" class="btn btn-success">Browse More</a>
            </div>   
        {% endif %}
        </div>
    </div>
</div>


{% schema %}
{
    "name": "404 Template",
    "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "url",
                "id": "action_url",
                "label": "Url"

            },
            {
                "type": "text",
                "id": "action_label",
                "label": "Label" ,
                "default": "Go Back"               
            }
        ]
}
{% endschema %}